{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2015",
    "module": "commonjs",
    "noImplicitAny": false,
    "isolatedModules": false,
    "removeComments": true,
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,
    "rootDirs": [
      "src"
    ]
  },
  "include": [
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
    "tools/typings"
  ],
  "compileOnSave": false
}
